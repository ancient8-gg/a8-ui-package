{
  "name": "a8-ui-packages",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:vite": "turbo run dev --filter=vite --filter=@ancient8/components --parallel",
    "dev:react": "turbo run dev --filter=react --filter=@ancient8/components --parallel",
    "dev:next": "turbo run dev --filter=next-15 --filter=@ancient8/components --parallel",
    "clean": "turbo run clean; rimraf .turbo",
    "version-packages": "changeset version",
    "release": "turbo run build && pnpm publish -r"
  },
  "author": "Ancient8",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.1.3"
  },
  "engines": {
    "node": ">=20.16.0"
  },
  "packageManager": "pnpm@9.12.0"
}
